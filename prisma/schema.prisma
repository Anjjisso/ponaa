generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id_user  Int    @id @default(autoincrement())
  email    String @unique @db.VarChar(100)
  password String @db.VarChar(100)
  role     Role

  guru  Guru?
  siswa Siswa?
}

model Guru {
  id_guru       Int          @id @default(autoincrement())
  nama          String       @db.VarChar(500)
  jenis_kelamin Jeniskelamin @default(LAKI_LAKI)
  nip           Int

  user_id Int  @unique
  user    User @relation(fields: [user_id], references: [id_user])
}

model Siswa {
  id_siswa      Int          @id @default(autoincrement())
  nama          String       @db.VarChar(500)
  jenis_kelamin Jeniskelamin @default(LAKI_LAKI)
  nisn          Int
  id_user       Int          @unique
  user          User         @relation(fields: [id_user], references: [id_user])
  kelas         String       @db.VarChar(100)
  total_poin    Int          @default(0)

  poins Poin[]
}

model Kategori_Poin {
  id_kategori   Int    @id @default(autoincrement())
  nama_kategori String @db.VarChar(100)
  nilai_default Int

  poins Poin[]
}

model Poin {
  id_poin     Int      @id @default(autoincrement())
  jumlah_poin Int
  tanggal     DateTime

  user_siswa Int
  siswa      Siswa @relation(fields: [user_siswa], references: [id_siswa])

  kategori_id Int
  kategori    Kategori_Poin @relation(fields: [kategori_id], references: [id_kategori])

  foto Bytes?
}

enum Role {
  GURU
  SISWA
  ADMIN
}

enum Jeniskelamin {
  LAKI_LAKI
  PEREMPUAN
}
